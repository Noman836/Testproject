<h2 class="text-center fs-1 fw-bolder">Log in</h2>
<div class="col-md-6 col-lg-4 offset-lg-4 offset-md-3 mt-5">
  <div class="bg-light p-5 border shadow">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email ,class: "form-text text-end" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password ,class: "form-text text-end"%><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me ,class: "form-text text-end"%>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" , class: "btn btn-primary w-100 my-3 shadow"%>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>
